{
  "compilerOptions": {
    "target": "ES6",
    "removeComments": false,
    "charset": "UTF-8",
    "module": "commonjs",
    "allowJs": true,
    "typeRoots": ["src/@typeses/"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./build/dist"
  },
  "include": ["src/**/*"]
}
